<%- include('../template/header_auth') %>  <!-- panggil header.ejs -->


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= judul %></h1>
    </div>

    <!-- Flash Message -->
    <div class="row">
        <div class="col-md">
            <% if (message && message.length > 0) { %>
                <div class="alert alert-success"><%= message %></div>
            <% } %>
        </div>
    </div>

    <!-- Daftar Kelas -->
    <div class="row">
        <% if (!kelas || kelas.length === 0) { %>
            <div class="col-md-12 text-center text-success error">
                <h2>Ooopppsss!!! Anda belum memiliki kelas</h2><br>
            </div>
            <div class="col-md d-flex justify-content-center">
                <img style="width: 20%" src="/assets/img/cry1.png" class="card-img" alt="Tidak ada kelas">
            </div>
            <div class="col-md-12 d-flex justify-content-center">
                <a href="/mahasiswa/katalog" class="btn btn-lg btn-success">
                    <i class="fas fa-search"></i> Cari kelas
                </a>
            </div>
        <% } else { %>
            <% kelas.forEach(k => { %>
                <div class="col-md pt-3">
                    <div class="card" style="width: 15.5rem;">
                        <img src="/assets/img/class/<%= k.image %>" class="card-img-top" alt="Gambar Kelas">
                        <div class="card-body">
                            <h5 class="card-title"><%= k.nama_kelas %></h5>
                            <p class="card-text"><%= k.deskripsi || '' %></p>
                            <a href="/mahasiswa/detailKelas/<%= k.id %>" class="btn btn-primary">Lihat Kelas</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>

</div>
<!-- /.container-fluid -->
