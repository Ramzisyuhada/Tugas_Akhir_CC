<%- include('../template/header_auth') %>

<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><%= judul %></h1>
  </div>

  <!-- Navbar Kelas -->
  <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="/">
      <!-- <img src="/assets/img/class/<%= kelas.image %>" width="30" height="30" class="d-inline-block align-top rounded-circle" alt=""> -->
      <%= kelas.nama_kelas %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto mr-3">
        <li class="nav-item">
          <a class="nav-link" href="#">Lihat Anggota</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Lihat Nilai</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Flash Message -->
  <% if (message) { %>
    <div class="row">
      <div class="col-md">
        <div class="alert alert-success"><%= message %></div>
      </div>
    </div>
  <% } %>

  <!-- Tugas -->
  <% if (!tugas || tugas.length === 0) { %>
    <div class="row text-center">
      <div class="col-md-12 text-success">
        <h2>Ooopppsss!!! <br>  belum pernah membuat tugas di kelas ini</h2><br>
      </div>
      <div class="col-md d-flex justify-content-center">
        <img style="width: 20%;" src="/assets/img/cry1.png" alt="Belum ada tugas">
      </div>
      <div class="col-md-12 d-flex justify-content-center mt-3">
        <a href="/aslab/tambahTugas/<%= kelas.id %>" class="btn btn-lg btn-success">
          <i class="fas fa-plus"></i> Tambah Tugas
        </a>
      </div>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-md-12">
        <% tugas.forEach(t => { %>
          <div class="list-group mb-3">
            <div class="list-group-item list-group-item-action">
              <h5 class="mb-1"><%= t.Title %></h5>
              <small class="text-muted">Batas Waktu: <%= new Date(t.batas_waktu).toLocaleString('id-ID') %></small><br>
              <a href="/mahasiswa/detailTugas/<%= t.id %>" class="btn btn-primary btn-sm mt-2">Lihat Tugas</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  <% } %>

</div>
